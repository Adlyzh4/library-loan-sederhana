<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <h1>Daftar Buku yang Dipinjam</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Judul Buku</th>
                <th>Peminjam</th>
                <th>Tanggal Peminjaman</th>
                <th>Deadline</th>
                <th>Pengembalian Buku</th>
                <th>Status</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% loans.forEach(loan => { %>
                <tr>
                    <!-- judul buku -->
                    <td><%= loan.title %></td>
                    <!-- nama peminjam -->
                    <td><%= loan.borrower_name %></td>
                    <!-- tanggal peminjaman -->
                    <td><%= new Date(loan.loan_date).toLocaleDateString('id-ID') %></td>
                    <!-- deadline -->
                    <td>
                        <%= new Date(loan.due_date).toLocaleDateString('id-ID') %>
                        <% if (new Date(loan.due_date) < new Date() && loan.status === 'dipinjam') { %>
                            <span class="badge bg-danger">Terlambat</span>
                            <% } %>
                        </td>
                    <td><%= new Date(loan.return_date).toLocaleDateString('id-ID') %></td>
                    <!-- status peminjaman -->
                    <td><%= loan.status %></td>
                    <td>
                        <% if (loan.status === 'dipinjam') { %>
                            <form action="/loans/return/<%= loan.id %>" method="POST">
                                <button type="submit" class="btn btn-success">Kembalikan</button>
                            </form>
                        <% } else { %>
                            <span class="text-muted">Sudah dikembalikan</span>
                            <!-- Form Hapus -->
                            <form action="/loans/delete/<%= loan.id %>" method="POST">
                                <button class="btn btn-danger" type="submit">Hapus</button>
                            </form>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
      
</body>
</html>