<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Buku</title>
</head>
<body>
    <h1>Daftar Buku</h1>

    <% books.forEach(book => { %>
        <p><%= book.title %> - <%= book.author %> (Status: <%= book.status %>)</p>

        <!-- Form Edit -->
        <form action="/books/edit/<%= book.id %>" method="POST">
            <input type="text" name="title" value="<%= book.title %>" required>
            <input type="text" name="author" value="<%= book.author %>" required>
            <button type="submit">Edit</button>
        </form>

        <% if (book.status === 'tersedia') { %>
            <form action="/loans/borrow" method="POST">
                <input type="hidden" name="book_id" value="<%= book.id %>">
                
                <label for="borrower_name">Nama Peminjam:</label>
                <input type="text" name="borrower_name" required>
            
                <label for="due_date">Deadline (Tgl Pengembalian):</label>
                <input type="date" name="due_date" required>
            
                <button type="submit">Pinjam</button>
            </form>
            
        <% } else { %>
            <p><strong>Buku sedang dipinjam</strong></p>
        <% } %>

        <!-- Form Hapus -->
        <form action="/books/delete/<%= book.id %>" method="POST">
            <button type="submit">Hapus</button>
        </form>
    <% }); %>

    <!-- Form Tambah Buku -->
    <h2>Tambah Buku</h2>
    <form action="/books/add" method="POST">
        <input type="text" name="title" placeholder="Judul Buku" required>
        <input type="text" name="author" placeholder="Penulis" required>
        <button type="submit">Tambah Buku</button>
    </form>

</body>
</html>
